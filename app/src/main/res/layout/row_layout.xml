<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="60dp">

    // NOT USING THIS LAYOUT
    <!-- TODO move text into strings.xml -->
    <!-- TODO move dimensions into dimens.xml -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_logo"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Generic logo denoting category of password credentials" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/tx_country_name"
        android:text="UAE"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:layout_toRightOf="@id/img_logo"
        android:fontFamily="serif" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/tx_capital_name"
        android:text="Dubai"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:layout_toRightOf="@id/tx_country_name"/>

</RelativeLayout>